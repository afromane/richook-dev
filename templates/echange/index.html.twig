{% extends 'base.html.twig' %}

{% block title %}Hello ExchangeController!{% endblock %}
{% block stylesheets %}

    <link  href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css"   rel="stylesheet" />
    <link  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"  rel="stylesheet"   />
    <style>
      body {
        overflow: hidden;
      }

      .sidebar {
        height: 100vh;
        border-right: 1px solid #dee2e6;
        background: #fff;
      }

      .chat-list {
        height: calc(100vh - 60px);
        overflow-y: auto;
      }

      .chat-item {
        padding: 15px;
        border-left: 3px solid transparent;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .chat-item:hover,
      .chat-item.active {
        background-color: #f8f9fa;
        border-left-color: #0d6efd;
      }

      .chat-item .text-muted {
        font-size: 0.85rem;
      }

      .chat-content {
        height: calc(100vh - 140px);
        overflow-y: auto;
        background-color: #fff;
        padding: 20px;
      }

      .message {
        max-width: 75%;
        margin: 10px 0;
        padding: 12px 15px;
        border-radius: 15px;
        position: relative;
        clear: both;
      }

      .message-received {
        background-color: #f8f9fa;
        float: left;
        border-bottom-left-radius: 5px;
      }

      .message-sent {
        background-color: #0d6efd;
        color: white;
        float: right;
        border-bottom-right-radius: 5px;
      }

      .chat-header {
        background: #fff;
        padding: 15px;
        border-bottom: 1px solid #dee2e6;
      }

      .chat-input {
        position: fixed;
        bottom: 0;
        background: white;
        border-top: 1px solid #dee2e6;
        padding: 15px;
        width: inherit;
      }

      .chat-input-wrapper {
        background-color: #f8f9fa;
        border-radius: 25px;
        padding: 8px 15px;
      }

      .chat-input-wrapper input {
        border: none;
        background: transparent;
        outline: none;
        padding: 8px 15px;
        width: 100%;
      }

      .chat-input-wrapper input:focus {
        box-shadow: none;
      }

      .chat-input-actions {
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .chat-input-actions button {
        background: transparent;
        border: none;
        color: #6c757d;
        padding: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
      }

      .chat-input-actions button:hover {
        color: #0d6efd;
      }

      .send-button {
        background-color: #0d6efd !important;
        color: white !important;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 10px;
      }

      .send-button:hover {
        background-color: #0b5ed7 !important;
      }

      .profile-sidebar {
        height: 100vh;
        border-left: 1px solid #dee2e6;
        padding: 20px;
        background: #fff;
      }

      .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
      }

      .avatar-lg {
        width: 80px;
        height: 80px;
      }

      .notification-badge {
        background-color: #0d6efd;
        color: white;
        border-radius: 50%;
        padding: 2px 6px;
        font-size: 12px;
      }

      .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: #28a745;
        display: inline-block;
        margin-right: 5px;
      }

      .profile-info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 0;
        border-bottom: 1px solid #dee2e6;
      }

      .search-bar {
        position: relative;
      }

      .search-bar .form-control {
        padding-right: 40px;
        border-radius: 20px;
        background-color: #f8f9fa;
        border: none;
      }

      .search-bar .search-filter {
        position: absolute;
        right: 5px;
        top: 50%;
        transform: translateY(-50%);
        border: none;
        background: none;
      }

      .btn-outline-light {
        border-color: #dee2e6;
      }

      .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
      }

      .custom-scrollbar::-webkit-scrollbar-track {
        background: #f1f1f1;
      }

      .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 3px;
      }

      .chat-filters {
        padding: 10px 15px;
        border-bottom: 1px solid #dee2e6;
      }

      .chat-filters .nav-link {
        color: #6c757d;
        padding: 5px 15px;
        border-radius: 15px;
      }

      .chat-filters .nav-link.active {
        background-color: #e9ecef;
        color: #0d6efd;
      }

      @media (max-width: 991.98px) {
        .sidebar,
        .profile-sidebar {
          position: fixed;
          top: 0;
          bottom: 0;
          z-index: 1000;
          width: 280px;
          transform: translateX(-100%);
          transition: transform 0.3s ease-in-out;
        }

        .profile-sidebar {
          right: 0;
          transform: translateX(100%);
        }

        .sidebar.show {
          transform: translateX(0);
        }

        .profile-sidebar.show {
          transform: translateX(0);
        }

        .overlay {
          display: none;
          position: fixed;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          background: rgba(0, 0, 0, 0.5);
          z-index: 999;
        }

        .overlay.show {
          display: block;
        }

        .chat-main {
          width: 100% !important;
          margin-left: 0 !important;
          margin-right: 0 !important;
        }

        .mobile-nav {
          display: flex !important;
        }
      }

      /* Styles pour tablettes */
      @media (min-width: 768px) and (max-width: 991.98px) {
        .chat-content {
          height: calc(100vh - 180px);
        }
      }

      /* Styles pour mobiles */
      @media (max-width: 767.98px) {
        .chat-content {
          height: calc(100vh - 160px);
        }

        .message {
          max-width: 85%;
        }

        .chat-header {
          padding: 10px;
        }

        .chat-input {
          padding: 10px;
        }

        .chat-input-wrapper {
          padding: 5px 10px;
        }
      }

      .mobile-nav {
        display: none;
        padding: 10px;
        background: #fff;
        border-bottom: 1px solid #dee2e6;
      }

      .mobile-nav button {
        padding: 8px;
        background: none;
        border: none;
        color: #6c757d;
      }

      .back-button {
        display: none;
      }

      @media (max-width: 575.98px) {
        .back-button {
          display: block;
        }
      }
    </style>
   
{% endblock %}

    {% block javascripts %}
         <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
        <script>
            $(document).ready(function () {
                $('.toggle-sidebar-left').click(function() {
                        $('.sidebar').toggleClass('show');
                        $('.overlay').toggleClass('show');
                    });

                    $('.toggle-sidebar-right').click(function() {
                        $('.profile-sidebar').toggleClass('show');
                        $('.overlay').toggleClass('show');
                    });

                    // Fermer les sidebars quand on clique sur l'overlay
                    $('.overlay').click(function() {
                        $('.sidebar, .profile-sidebar').removeClass('show');
                        $(this).removeClass('show');
                    });

                    // Gestion du bouton retour sur mobile
                    $('.back-button').click(function() {
                        $('.chat-main').hide();
                        $('.sidebar').addClass('show');
                    });

                    // Gestion du clic sur une conversation sur mobile
                    $('.chat-item').click(function() {
                        if (window.innerWidth < 992) {
                            $('.sidebar').removeClass('show');
                            $('.overlay').removeClass('show');
                            $('.chat-main').show();
                        }
                    });

                    // Adapter l'interface lors du redimensionnement
                    $(window).resize(function() {
                        if (window.innerWidth >= 992) {
                            $('.sidebar, .profile-sidebar').removeClass('show');
                            $('.overlay').removeClass('show');
                            $('.chat-main').show();
                        }
                    });
                // Activation des tooltips Bootstrap
                $('[data-bs-toggle="tooltip"]').tooltip();

                // Gestion du clic sur les éléments de la liste de chat
                $(".chat-item").click(function () {
                $(".chat-item").removeClass("active");
                $(this).addClass("active");
                });

                // Fonction pour ajouter un nouveau message
                function addMessage(message, isSent) {
                const messageClass = isSent ? "message-sent" : "message-received";
                const messageHtml = `
                            <div class="message ${messageClass}">
                                ${message}
                            </div>
                        `;
                $(".chat-content").append(messageHtml);
                $(".chat-content").scrollTop($(".chat-content")[0].scrollHeight);
                }

                // Gestion de l'envoi de message
               /* $(".send-button").click(function () {
                const input = $(".chat-input input");
                const message = input.val().trim();
                if (message) {
                    addMessage(message, true);
                    input.val("");
                }
                });*/

                // Envoi avec la touche Enter
                $(".chat-input input").keypress(function (e) {
                if (e.which == 13) {
                    $(".send-button").click();
                }
                });

                // Scroll automatique vers le bas de la conversation
                $(".chat-content").scrollTop($(".chat-content")[0].scrollHeight);
            });
        </script>
         <script>
            
        $(function () {
            const $messageInput = $('#message');
            const $sendMessage = $('.send-button');
            const $echangeId = $('#echange_id');
            const $chatContent = $('.chat-content');
            const $chatItem = $('.chat-item')
            const profileOwner = $('#profileOwner');
            const nameOwner = $('#nameOwner');
            const potentielImage = $('#potentielImage');
            const potentielName = $('#potentielName');
            const potentielDescription = $('#potentielDescription');
           

            // Initialisation : cacher la section des messages
            $('.profile-sidebar').hide();
            $('.chat-main *').hide();

            // Fonction pour afficher les messages
            function displayMessages(response, echangeId) {
                //$listEchange.hide();
                 $('.profile-sidebar').show();
                  $('.chat-main *').show();
                $echangeId.val(echangeId);

                // Réinitialiser les éléments
                $chatContent.empty();
                profileOwner.attr('src', response.owner.profile);
                nameOwner.text(response.owner.name);
                potentielImage.attr('src', response.potentiel.image);
                potentielName.text(response.potentiel.name);
                potentielDescription.text(response.potentiel.description);

                // Ajouter les messages
                response.messages.forEach(message => {
                    
                        const messageHtml = `
                        <div class="message ${message.sender === message.currentUser  ? 'message-sent' : 'message-received'}">
                            ${message.contenu}
                        </div>`;
                    $chatContent.append(messageHtml);
                });
            }

            // Chargement des messages pour un échange
            $chatItem.click(function () {
                const echangeId = $(this).attr('id');

                $.ajax({
                    url: '{{path("app_echange_message_show")}}',
                    type: 'POST',
                    data: { need_id: echangeId },
                    dataType: 'json',
                    success: function (response) {
                        displayMessages(response, echangeId);
                    },
                    error: function (xhr, status, error) {
                        console.error('Erreur:', error);
                    }
                });
            });

            // Activer ou désactiver le bouton "Envoyer"
            $messageInput.on('input', function () {
                const message = $messageInput.val().trim();
                $sendMessage.prop('disabled', message === '');
            });

            // Envoi d'un message
            $sendMessage.click(function () {
                const message = $messageInput.val().trim();
                const echangeId = $echangeId.val();

                if (message !== '') {
                    $.ajax({
                        url: '{{path("app_echange_message_send")}}',
                        method: 'POST',
                        data: { message: message, echange_id: echangeId },
                        success: function () {
                            // Rafraîchir les messages après envoi
                            $.ajax({
                                url: '{{path("app_echange_message_show")}}',
                                type: 'POST',
                                data: { id: echangeId },
                                dataType: 'json',
                                success: function (response) {
                                    displayMessages(response, echangeId);
                                },
                                error: function (xhr, status, error) {
                                    console.error('Erreur lors du rafraîchissement:', error);
                                }
                            });

                            // Réinitialiser le champ message
                            $messageInput.val('');
                            $sendMessage.prop('disabled', true);
                        },
                        error: function (xhr, status, error) {
                            alert('Erreur lors de l\'enregistrement du message. Veuillez réessayer.');
                        }
                    });
                } else {
                    alert('Veuillez entrer un message avant de l\'envoyer.');
                }
            });
        });

    </script>

       

    {% endblock %}
