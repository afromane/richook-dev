{% extends 'admin.html.twig' %}

{% block title %}Besoin {% endblock %}

{% block body %}


     <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                <h1 class="m-0">Mes Besoin</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Besoin</a></li>
                        <li class="breadcrumb-item active">liste </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
     <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">
                      <a href="{{ path('app_besoin_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i>  Créer un besoin</a>
                </h3>
              </div>
                <div class="card-body">
                    <table class="table  table-bordered table-hove">
                        <thead>
                            <tr>
                                <th>N</th>
                                <th>Img</th>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>Statut</th>
                                <th>Periode</th>
                                {# <th>Crée le</th> #}

                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for besoin in besoins %}
                            <tr>
                                <td></td>
                                <td> <img src="{{asset('img/'~besoin.img)}}" style="height:80px;width:80px;"/></td>
                                <td>{{ besoin.label }}</td>
                                <td>{{ besoin.description }}</td>
                                <td>{{ besoin.isPrivate ? 'Privé' : 'Public' }}</td>
                                <td>{{ besoin.periode }}</td>
                                {# <td>{{ besoin.createdAt ? besoin.createdAt|date('Y-m-d H:i:s') : '' }}</td> #}

                                <td>
                                    <a href="{{ path('app_besoin_show', {'id': besoin.id}) }}">show</a>
                                    <a href="{{ path('app_besoin_edit', {'id': besoin.id}) }}">edit</a>
                                    
                                    <a href="{{ path('app_besoin_transfer', {'id': besoin.id}) }}">
                                        {{ besoin.isPrivate ? 'Ceder' : 'Privé' }}
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
          </div>
        </div>
      </div>
    </section>
   

{% endblock %}
